---
const { image, url, title, description } = Astro.props;
---

{url ? (
  <a
    href={url}
    class="group flex flex-col h-80 rounded-2xl shadow-lg hover:shadow-2xl transition bg-white overflow-hidden"
  >
    {image && (
      <div class="flex items-center justify-center h-48 bg-gray-100">
        <img
          src={image}
          alt={title}
          class="max-h-full max-w-full object-contain"
        />
      </div>
    )}
    <div class="flex-1 flex flex-col items-center justify-center text-center p-4">
      {title && <h2 class="text-2xl font-bold mb-2">{title}</h2>}
      {description && <p class="text-gray-600 text-sm">{description}</p>}
      <slot />
    </div>
  </a>
) : (
  <div class="flex flex-col h-80 rounded-2xl shadow-lg bg-white overflow-hidden">
    {image && (
      <div class="flex items-center justify-center h-48 bg-gray-100">
        <img
          src={image}
          alt={title}
          class="max-h-full max-w-full object-contain"
        />
      </div>
    )}
    <div class="flex-1 flex flex-col items-center justify-center text-center p-4">
      {title && <h2 class="text-2xl font-bold mb-2">{title}</h2>}
      {description && <p class="text-gray-600 text-sm">{description}</p>}
      <slot />
    </div>
  </div>
)}
