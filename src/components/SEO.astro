---
const title = "Appunti di Matematica e Programmazione - AppuntiFacili.it";
const description = "Videolezioni, appunti e risorse per imparare matematica e programmazione online.";
const url = "https://appuntifacili.it";
const image = "https://appuntifacili.it"; // se vuoi social preview
---

<head>
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={url} />

  <!-- Open Graph (Facebook, LinkedIn) -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={url} />
  <meta property="og:image" content={image} />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={image} />
</head>
