---
title: "Insegnanti"
import insegnate1 from "@/assets/logo/insegnante1.png";
import insegnante2 from "@/assets/logo/insegnante2.png";
---

<div class="container mx-auto px-6 py-12 space-y-12">
  <h1 class="text-4xl font-bold text-center mb-8">I Nostri Insegnanti</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Card Dennis -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <img
        src={insegnate1.src}
        alt="Dennis"
        class="w-full h-64 object-cover"
      />
      <div class="p-6">
        <h2 class="text-2xl font-semibold mb-2">Dennis</h2>
        <p class="text-gray-700 mb-4">
          Dennis insegna <b>matematica</b> ed <b>informatica</b>
        </p>
        <a
          href="https://calendar.app.google/Rjok4qYyNwfbJnja9"
          target="_blank"
          class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition"
        >
          Prenota una lezione
        </a>
      </div>
    </div>

    <!-- Card Marco -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <img
        src={insegnante2.src}
        alt="Marco"
        class="w-full h-64 object-cover"
      />
      <div class="p-6">
        <h2 class="text-2xl font-semibold mb-2">Marco</h2>
        <p class="text-gray-700 mb-4">
          Marco insegna <b>matematica</b>
        </p>
        <a
          href="https://wa.me/393457794186"
          target="_blank"
          class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition"
        >
          Prenota una lezione
        </a>
      </div>
    </div>
  </div>
</div>
