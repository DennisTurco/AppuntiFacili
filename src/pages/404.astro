---
import Container from "@/components/container.astro";
import Layout from "@/layouts/Layout.astro";
import githubIcon from "@/assets/logo/github.png";
---

<Layout title="404 Not Found">
  <Container>
    <div class="min-h-[calc(100vh-16rem)] flex items-center justify-center">
      <div class="mt-16 text-center space-y-4">
        <h1 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">404</h1>
        <p class="text-lg text-slate-600">Pagina non trovata.</p>

        <div class="flex justify-center gap-4 mt-6">
          <!-- Bottone Home -->
          <a
            href="/ImparareFacile/"
            class="inline-block bg-blue-600 text-white px-6 py-3 rounded-md hover:bg-blue-700 transition"
          >
            ‚Üê Torna alla Home
          </a>

          <!-- Bottone Report GitHub -->
          <a
            href="https://github.com/DennisTurco/ImparareFacile/issues/new?title=404+Page+Not+Found&body=Pagina+404+in+URL:+{{window.location.href}}"
            target="_blank"
            class="inline-flex items-center gap-2 bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition"
          >
            <img src={githubIcon.src} alt="GitHub" class="h-6 w-6"/>
            <span>Segnala su GitHub</span>
          </a>
        </div>
      </div>
    </div>
  </Container>
</Layout>
