---
import { SEO } from "astro-seo";
import Footer from "@/components/footer.astro";
import Navbar from "@/components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";
import "@fontsource-variable/bricolage-grotesque";
import { ViewTransitions } from 'astro:transitions';
import ToasterProvider from "@/components/ToasterProvider.jsx";
import "../styles/global.css";

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title, description, url, image } = Astro.props as Props;

const makeTitle = title
  ? title + " | " + "AppuntiFacili"
  : "AppuntiFacili";

export interface Props {
  title?: string;
  description?: string;
  url?: string;
  image?: string;
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css"/>
    <SEO
      title={makeTitle}
      description="AppuntiFacili è un sito dove vengono caricati gli appunti per gli studenti delle superiori e dell'università"
      canonical={canonicalURL}
      twitter={{
        creator: "@surjithctly",
        site: "@web3templates",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `AppuntiFacili`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "AppuntiFacili Homepage Screenshot",
        },
      }}
    />

    <!-- Google Analytics -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${import.meta.env.PUBLIC_GA_ID}`}></script>
    <script>
      const gtag = (...args) => {
        window.dataLayer = window.dataLayer || [];
        window.dataLayer.push(args);
      };
      gtag('js', new Date());
      gtag('config', import.meta.env.PUBLIC_GA_ID);
    </script>

    <!-- Copy code to clipboard -->
     <script>
      let copyButtonLabel = "Copia il codice";
      let codeBlocks = Array.from(document.querySelectorAll("pre"));

      for (let codeBlock of codeBlocks) {
        if (!codeBlock.parentNode) continue;

        let codeEl = codeBlock.querySelector("code");
        if (!codeEl) continue;

        if (codeEl.className.toLowerCase().includes("mermaid")) continue;

        let wrapper = document.createElement("div");
        wrapper.style.position = "relative";

        let copyButton = document.createElement("button");
        copyButton.className = "copy-code";
        copyButton.innerHTML = copyButtonLabel;
        copyButton.style.position = "absolute";
        copyButton.style.top = "5px";
        copyButton.style.right = "5px";

        codeBlock.setAttribute("tabindex", "0");

        codeBlock.parentNode.insertBefore(wrapper, codeBlock);
        wrapper.appendChild(codeBlock);
        wrapper.appendChild(copyButton);

        copyButton.addEventListener("click", async () => {
          await copyCode(codeBlock, copyButton);
        });
      }

      async function copyCode(block, button) {
        let code = block.querySelector("code");
        if (!code) return;

        let text = code.innerText;

        try {
          await navigator.clipboard.writeText(text);
          button.innerText = "Codice copiato";
          setTimeout(() => {
            button.innerText = copyButtonLabel;
          }, 700);
        } catch (err) {
          console.error("Failed to copy:", err);
        }
      }
      </script>

  </head>
  <body>
    <Navbar />
    <ToasterProvider client:load>
    <slot />
    </ToasterProvider>
    <ViewTransitions />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>